@model UmTempoEmCasa.Models.Imovel

@{
    ViewData["Title"] = "Create";
}

<div class="formulario" style="padding-left: 10px;">
    
    <h3 style="text-align:center;">Cadastre seu imóvel</h3>
   
    <div class="container">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 offset-md-3">
                    <label asp-for="AnfitriaoForeignKey" class="form-label">Anfitrião número do cadastro :</label>
                    <select asp-for="AnfitriaoForeignKey" class ="form-control" asp-items="ViewBag.AnfitriaoForeignKey"></select>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Insira o endereço*"/>
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Cidade" class="form-label">Cidade :</label>
                    <input asp-for="Cidade" class="form-control" placeholder="Insira a cidade*"/>
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Cep" class="form-label">CEP :</label>
                    <input asp-for="Cep" class="form-control" placeholder="Insira o CEP*"/>
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3 btnForm">
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                
                     <a class="btn btn-danger" asp-controller="Home" asp-action="Index" style="color:white;">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px;">
        <a asp-action="Index" style="color:white">Acessar a lista de Imóvel</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
