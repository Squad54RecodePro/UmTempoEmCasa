@model UmTempoEmCasa.Models.Imovel

@{
    ViewData["Title"] = "Delete";
}

<div class="container formulario">
    <h3 style="text-align: center;">Você deseja realmente excluir?</h3>
    
    <div class="container" style="padding-top: 30px; padding-left: 40px;">
        
        <label class = "col-sm-2"><b>Anfitriões :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Anfitrioes.Nome)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Endereço :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Cidade :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>CEP :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </label>

    </div>
    <div style="padding-top: 30px; padding-bottom: 30px; padding-left: 40px;">
       <form asp-action="Delete">
           <input type="hidden" asp-for="ImovelID" />
           <input type="submit" value="Excluir" class="btn btn-danger" /> 
           <input type="submit" class="btn btn-warning" value="Voltar para a Lista" asp-action="Index"/>
       </form>
    </div>
</div>