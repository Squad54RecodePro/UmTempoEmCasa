@model UmTempoEmCasa.Models.Imovel

@{
    ViewData["Title"] = "Edit";
}

<div class="formulario" style="padding-left: 10px;">

    <h3 style="text-align:center; padding-top: 40px;">Alterar dados do Imóvel</h3>
    
    
    <div class="container">
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ImovelID" />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="AnfitriaoForeignKey" class="form-label">CEP :</label>
                    <select asp-for="AnfitriaoForeignKey" class="form-control" asp-items="ViewBag.AnfitriaoForeignKey"></select>
                    <span asp-validation-for="AnfitriaoForeignKey" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Cidade" class="form-label">Cidade :</label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Cep" class="form-label">CEP :</label>
                    <input asp-for="Cep" class="form-control" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Alterar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px; padding-left: 20px;">
        <a style="color: white" asp-action="Index"><b>Acessar lista de Imóvel</b></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
