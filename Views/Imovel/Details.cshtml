@model UmTempoEmCasa.Models.Imovel

@{
    ViewData["Title"] = "Details";
}

<div class="row formulario">
    <h3 style="text-align: center;">Detalhes do Imóvel</h3>
    
    <dl class="container" style="padding-top: 30px; padding-left: 40px;">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Anfitrioes)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Anfitrioes.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cidade)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cep)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </dd>
    </dl>
    <div style="padding-top: 30px; padding-bottom: 30px; padding-left: 40px;">
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.ImovelID">Alterar</a> |
        <a class="btn btn-warning" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
