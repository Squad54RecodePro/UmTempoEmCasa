@model UmTempoEmCasa.Models.Contato

@{
    ViewData["Title"] = "Edit";
}

<div class="row formulario" style="padding-left: 10px;">

    <h3 style="text-align:center; padding-top: 40px;">Editar dados do Contato</h3>

    <div class="container">
        <div class="row">
            <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="col-md-6 offset-md-3">
                <label asp-for="Nome" class="form-label">Nome :</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br />
            <div class="col-md-6 offset-md-3">
                <label asp-for="Email" class="form-label">Email :</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="col-md-6 offset-md-3">
                <label asp-for="assunto" class="form-label">Assunto :</label>
                <input asp-for="assunto" class="form-control" />
                <span asp-validation-for="assunto" class="text-danger"></span>
            </div>
            <br />
            <div class="col-md-6 offset-md-3">
                <label asp-for="mensagem" class="form-label">Mensagem :</label>
                <textarea asp-for="mensagem" class="form-control">

                </textarea>
                <span asp-validation-for="mensagem" class="text-danger"></span>
            </div>
            <br />
            <div class="col-md-6 offset-md-3">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
<hr />
<div style="padding-bottom: 40px; padding-top:30px; padding-left: 20px;">
    <a style="color: white" asp-action="Index"><b>Acessar a lista de Contatos</b></a>
</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
