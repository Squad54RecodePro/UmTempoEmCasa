@model UmTempoEmCasa.Models.Contato

@{
    ViewData["Title"] = "Create";
}

<style>

    label{
        background-color: orangered; 
        color: white; 
        width: 260px; 
        height: 30px; 
        text-align: center;
        margin-left: 10px;
        box-shadow: 0 0 0.2em gray;
    }
    a{
        text-decoration: none;
        font-size: 20px;
    }
    a:hover{
        color: orangered;
    }
    .form-control:focus{
        border-color: orangered;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(255, 69, 0, 25);
    }
</style>

<div style="padding-left: 10px;">

    <h1>Create</h1>
    <h4>Contato</h4>
    <hr />
    <div class="container" style="text-align: center;">
        <div class="col-md-offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-sm-4">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="assunto" class="form-label"></label>
                    <input asp-for="assunto" class="form-control" />
                    <span asp-validation-for="assunto" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="mensagem" class="form-label"></label>
                    <input asp-for="mensagem" class="form-control" />
                    <span asp-validation-for="mensagem" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Index"><b>Acessar a lista de Contato</b></a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
