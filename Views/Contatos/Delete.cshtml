@model UmTempoEmCasa.Models.Contato

@{
    ViewData["Title"] = "Delete";
}

<div class="container formulario">
    <h3 style="text-align: center;">Deseja realmente exluir?</h3>
  
    <div class="container" style="padding-top: 30px; padding-left: 40px;">
        
        <label class = "col-sm-2"><b>Nome :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Email :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Assunto :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.assunto)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Mensagem :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.mensagem)
        </label>

    </div>
    <div style="padding-top: 30px; padding-bottom: 30px; padding-left: 40px;">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Excluir" class="btn btn-danger" />
            <input type="submit" class="btn btn-warning" value="Voltar para a Lista" asp-action="Index"/>
        </form>
   </div>
</div>
