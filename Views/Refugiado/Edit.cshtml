@model UmTempoEmCasa.Models.Refugiado

@{
    ViewData["Title"] = "Edit";
}

<div class="formulario" style="padding-left: 10px;">

    <h3 style="text-align: center; margin-top: 40px;">Alterar cadastro Refugiado</h3>
    
    <div class="container">
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RefugiadoID" />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nome" class="form-label">Nome :</label>
                    <input type="text" asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nascimento" class="form-label"></label>
                    <input type="text" asp-for="Nascimento" class="form-control" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="CPF" class="form-label">CPF :</label>
                    <input type="text" asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Telefone" class="form-label">Telefone :</label>
                    <input type="text" asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Email" class="form-label">Email :</label>
                    <input type="text" asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input type="text" asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="CEP" class="form-label">CEP :</label>
                    <input type="text" asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Senha" class="form-label">Senha :</label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3" style="padding-bottom: 40px;">
              
                    <button id="btnBloqueado" type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Alterar
                    </button>

                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" style="color:black" id="exampleModalLabel">Dados</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body" style="color:black">
                            Alterado com sucesso!
                          </div>
                          <div class="modal-footer">
                            <input type="submit" value="Ok" class="btn btn-success"/>
                          </div>
                        </div>
                      </div>
                    </div>

                    <button class="btn btn-warning" asp-action="Index">Voltar para a Lista</button>
                    
                 </div>
            </form>
        </div>
    </div>   
</div>

<script>
    
    let d = document, [inputs, btnBloqueado] = [
    d.querySelectorAll('[type = "text"]'),
    d.querySelector('#btnBloqueado')]
    btnBloqueado.disabled = true
    
    for(i = 0; i < inputs.length; i++){
    inputs[i].addEventListener('input', () => {
    let values = []
    inputs.forEach(v => values.push(v.value))
    btnBloqueado.disabled = values.includes('')
    })
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
