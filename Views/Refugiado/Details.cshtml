@model UmTempoEmCasa.Models.Refugiado

@{
    ViewData["Title"] = "Details";
}

<div class="formulario">
    
    <h3 style="text-align: center; ">Detalhes do Refugiado</h3>
   
    <div class="container" style="padding-top: 30px; padding-left: 40px;">
        
        <label class = "col-sm-2"><b>Nome :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Nascimento :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>CPF :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.CPF)
        </label>
        <br /><br />
        
        <label class = "col-sm-2"><b>Telefone :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Email :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Endereço :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>CEP :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.CEP)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Senha :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </label>

    </div>
    <div  style="padding-top: 30px; padding-bottom: 30px; padding-left: 40px;">
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.RefugiadoID">Alterar</a>
        <a class="btn btn-warning" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>

