@model UmTempoEmCasa.Models.Refugiado

@{
    ViewData["Title"] = "Create";
}

<style>

    label{
        background-color: orangered; 
        color: white; 
        width: 260px; 
        height: 30px; 
        text-align: center;
        margin-left: 10px;
        box-shadow: 0 0 0.2em gray;
    }
    a{
        text-decoration: none;
        font-size: 20px;
    }
    a:hover{
        color: orangered;
    }
    .form-control:focus{
        border-color: orangered;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(255, 69, 0, 25);
    }
</style>

<div style="padding-left: 10px;">
    
    <h1>Cadastrar</h1>
    <h4>Refugiado</h4>
    <hr />

    <div class="container" style="text-align:center;">
        <div class="col-md-offset-3">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-sm-4">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Nascimento" class="form-label"></label>
                    <input asp-for="Nascimento" class="form-control" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="CPF" class="form-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Endereco" class="form-label"></label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="CEP" class="form-label"></label>
                    <input asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Senha" class="form-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Index"><b>Voltar para a Lista</b></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
