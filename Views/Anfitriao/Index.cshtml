@model IEnumerable<UmTempoEmCasa.Models.Anfitriao>

@{
    ViewData["Title"] = "Index";
}

<div class="formulario">

    <h3 style="text-align: center; margin-top: 40px;">Lista de Anfitriões</h3>
    <br />
    <p style="padding-top: 20px; padding-bottom: 20px;">
        <a style="color: white; padding-left: 15px;" asp-action="Create"><u>Adicionar novo Anfitrião</u></a>
    </p>

    <div class="table-responsive" style="padding-bottom: 40px;">
    <table class="table table-sucess table-striped" style="background-color: white; text-align: center;">
        <thead class="formulario">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEP)
                </th>
                <th>Alterar</th>
                <th>Detalhes</th>
                <th>Excluir</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnfitriaoID">Alterar</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AnfitriaoID">Detalhes</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.AnfitriaoID">Excluir</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
    </div>
</div>