@model IEnumerable<UmTempoEmCasa.Models.Anfitriao>

@{
    ViewData["Title"] = "Index";
}

<style>
    a{
        text-decoration: none;
        font-size: 20px;
    }
    a:hover{
        color: orangered;
    }
</style>

<div class="container">

    <h1>Lista de Anfitriões</h1>
    <p>
        <a asp-action="Create">Adicionar novo Anfitrião</a>
    </p>

    <table class="table table-sucess table-striped" style="background-color: white; text-align: center;">
        <thead style="background-color: orangered; color: white;">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CNPJ)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Senha)
                </th>
                <th style="background-color: black; color: white;">Alterar</th>
                <th style="background-color: black; color: white;">Detalhes</th>
                <th style="background-color: black; color: white;">Excluir</th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nascimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CEP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Senha)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AnfitriaoID">Alterar</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.AnfitriaoID">Detalhes</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.AnfitriaoID">Excluir</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>