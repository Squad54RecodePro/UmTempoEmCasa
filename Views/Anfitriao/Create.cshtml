@model UmTempoEmCasa.Models.Anfitriao

@{
    ViewData["Title"] = "Create";
}

<div class="formulario" style="padding-left: 10px;">

    <h3 style="text-align:center;">Cadastro de Anfitrião</h3>

    <div class="container" >
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nome" class="form-label">Nome :</label>
                    <input asp-for="Nome" class="form-control" placeholder="Insira seu nome*"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Tipo" class="form-label">Tipo :</label>
                    <select id="tipo_pessoa" onChange="exibir(this)" asp-for="Tipo" class="form-control">
                        <option value="0">Selecione...</option>
                        <option value="fisico">CPF</option>
                        <option value="juridico">CNPJ</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <br />
                 <div id="cpf" class="col-md-6 offset-md-3">
                    <label asp-for="CPF" class="form-label">CPF :</label>
                    <input asp-for="CPF" class="form-control" placeholder="Insira o CPF*"/>
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <br />
                <div id="cnpj" class="col-md-6 offset-md-3">
                    <label asp-for="CNPJ" class="form-label">CNPJ :</label>
                    <input asp-for="CNPJ" class="form-control" placeholder="Insira o CNPJ caso possua"/>
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nascimento" class="form-label"></label>
                    <input asp-for="Nascimento" class="form-control" />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Telefone" class="form-label">Telefone :</label>
                    <input asp-for="Telefone" class="form-control" placeholder="Insira o telefone*"/>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Email" class="form-label">Email :</label>
                    <input asp-for="Email" class="form-control" placeholder="Insira o e-mail*"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Insira o endereço*"/>
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Cidade" class="form-label">Cidade :</label>
                    <input asp-for="Cidade" class="form-control" placeholder="Insira a cidade*"/>
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="CEP" class="form-label">CEP :</label>
                    <input asp-for="CEP" class="form-control" placeholder="Insira o CEP*"/>
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Senha" class="form-label">Senha :</label>
                    <input id="password" asp-for="Senha"  type="password" class="form-control" />
                    <span  asp-validation-for="Senha" class="text-danger"></span>
                                        
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Senha" class="form-label">Digite a Senha novamente :</label>
                    <input id="confirm_password" onChange="validatePassword()" type="password" class="form-control" />
                    <span id="alerta" ></span>
                </div>
                <br />
                <div class="linktermo"> 
                <p> <input type="checkbox" id="termAnf" name="termAnf"> Concordo com os  <a class="linktem a" target="_blank" asp-controller="Refugiado" asp-action="term"> Termos de Serviços</a> e com o processamento dos meus dados</p>
                </div>
                <div class="col-md-6 offset-md-3 btnForm">
                    <input type="submit" id="botaobloqueado" value="Cadastrar" class="btn btn-success" />
               
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index" style="color:white;">Cancelar</a>
                
               
               </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px;">
        <a style="color: white;" asp-action="Index"><b>Acessar a lista de Anfitrião</b></a>
    </div>
</div>

<script>
    document.getElementById('cpf').hidden=true;
   document.getElementById('cnpj').hidden=true;
   function exibir(val){
       if(val.value=='fisico'){
           document.getElementById('cpf').hidden=false;
           document.getElementById('cnpj').hidden=true;
       }
       if (val.value=='juridico'){
           document.getElementById('cnpj').hidden=false;
           document.getElementById('cpf').hidden=true;
       } 
       
   }
   
   document.getElementById("botaobloqueado").disabled=true;

    function validatePassword(){
        var password = document.getElementById("password").value;
        var confirm_password = document.getElementById("confirm_password").value;

      console.log(password);
      console.log(confirm_password);

       if(password == confirm_password) {

            document.getElementById("alerta").innerHTML="Senhas Iguais";
            document.getElementById("botaobloqueado").disabled=false;


        } else {
            document.getElementById("alerta").innerHTML="Senhas diferentes";
        }
      
}

        
    
    </script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}