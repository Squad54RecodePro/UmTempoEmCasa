@model UmTempoEmCasa.Models.Anfitriao

@{
    ViewData["Title"] = "Edit";
}

<div class="row formulario" style="padding-left: 10px;">

    <h3 style="text-align:center; padding-top: 40px;">Alterar dados do Anfitrião</h3>
    
    <div class="container">
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AnfitriaoID" />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nome" class="form-label">Nome :</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
               <div class="col-md-6 offset-md-3">
                    <label asp-for="Tipo" class="form-label"></label>
                    <select asp-for="Tipo" class="form-control" >
                        <option>Selecione...</option>
                        <option>CPF</option>
                        <option>CNPJ</option>
                    </select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
              
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Telefone" class="form-label">Telefone :</label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Email" class="form-label">Email :</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input asp-for="Endereco" class="form-control" />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Cidade" class="form-label">Cidade :</label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="CEP" class="form-label">CEP :</label>
                    <input asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="CPF" class="form-label">CPF :</label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="CNPJ" class="form-label">CNPJ :</label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Senha" class="form-label">Senha :</label>
                    <input asp-for="Senha" type="password" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Alterar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px; padding-left: 20px">
        <a style="color: white" asp-action="Index"><b>Acessar Cadastros</b></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
