@model UmTempoEmCasa.Models.Reserva

@{
    ViewData["Title"] = "Edit";
}

<style>

    label{
        background-color: orangered; 
        color: white; 
        width: 260px; 
        height: 30px; 
        text-align: center;
        margin-left: 10px;
        box-shadow: 0 0 0.2em gray;
    }
    a{
        text-decoration: none;
        font-size: 20px;
    }
    a:hover{
        color: orangered;
    }
    .form-control:focus{
        border-color: orangered;
        box-shadow: 0 1px 1px rgba(0, 0, 0, 0.075) inset, 0 0 8px rgba(255, 69, 0, 25);
    }
</style>
<div style="padding-left: 10px;">
    
    <h1>Alterar</h1>
    <h4>Reserva</h4>
    <hr />
    
    <div class="row" style="text-align:center;">
        <div class="col-md-offset-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ReservaID" />
                <div class="col-sm-4">
                    <label asp-for="RefugiadoForeignKey" class="form-label"></label>
                    <select asp-for="RefugiadoForeignKey" class="form-control" asp-items="ViewBag.RefugiadoForeignKey"></select>
                    <span asp-validation-for="RefugiadoForeignKey" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="AnuncioForeignKey" class="form-label"></label>
                    <select asp-for="AnuncioForeignKey" class="form-control" asp-items="ViewBag.AnuncioForeignKey"></select>
                    <span asp-validation-for="AnuncioForeignKey" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="DateInicio" class="form-label"></label>
                    <input asp-for="DateInicio" class="form-control" />
                    <span asp-validation-for="DateInicio" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <label asp-for="DataFim" class="form-label"></label>
                    <input asp-for="DataFim" class="form-control" />
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>
                <br />
                <div class="col-sm-4">
                    <input type="submit" value="Alterar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <hr />
    <div>
        <a asp-action="Index"><b>Voltar para a Lista</b></a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
