@model UmTempoEmCasa.Models.Reserva

@{
    ViewData["Title"] = "Delete";
}

<div class="container formulario">
    <h3 style="text-align: center; ">Você deseja realmente excluir?</h3>

    <div class="container" style="padding-top: 30px; padding-left: 40px;">
        
        <label class = "col-sm-2"><b>Refugiados :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Refugiados.Nome)
        </label>
        <br /><br>

        <label class = "col-sm-2"><b>Anúncios :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Anuncios.AnuncioID)
        </label>
        <br /><br />
        
        <label class = "col-sm-2"><b>DateInicio :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.DateInicio)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>DataFim :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.DataFim)
        </label>

    </div>
    <div style="padding-top: 30px; padding-bottom: 30px; padding-left: 40px;">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReservaID" />
            <input type="submit" value="Excluir" class="btn btn-danger" /> 
            <input type="submit" class="btn btn-warning" value="Voltar para a Lista" asp-action="Index"/>
        </form>
    </div>
</div>