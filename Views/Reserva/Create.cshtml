@model UmTempoEmCasa.Models.Reserva

@{
    ViewData["Title"] = "Create";
}

<div class="formulario" style="padding-left: 10px;">

    <h3 style="text-align:center;">Faça sua Reserva</h3>

    <div class="container">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 offset-md-3">
                    <label asp-for="RefugiadoForeignKey" class="form-label">Nome do Refugiado :</label>
                    <select asp-for="RefugiadoForeignKey" class ="form-control" asp-items="ViewBag.RefugiadoForeignKey"></select>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="AnuncioForeignKey" class="form-label">Nome do Anúncio :</label>
                    <select asp-for="AnuncioForeignKey" class ="form-control" asp-items="ViewBag.AnuncioForeignKey"></select>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="DateInicio" class="form-label"></label>
                    <input asp-for="DateInicio" class="form-control" />
                    <span asp-validation-for="DateInicio" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="DataFim" class="form-label"></label>
                    <input asp-for="DataFim" class="form-control" />
                    <span asp-validation-for="DataFim" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3 btnForm">
                
                    
                    <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" style="color:black;" id="exampleModalToggleLabel">Reserva</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="color:black;">
                                    Deseja realmente fazer a Reserva?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Não</button>
                                    <button class="btn btn-success" type="button" value="Cadastrar" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">Sim</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" style="color:black;" id="exampleModalToggleLabel2">Cadastro efetuado com Sucesso!</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="color:black;">
                                    Em breve entraremos em contato para completar a sua solicitação.
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-success" data-bs-target="#exampleModalToggle" data-bs-toggle="modal" data-bs-dismiss="modal">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <a class="btn btn-success" data-bs-toggle="modal" href="#exampleModalToggle" role="button">Reservar</a>
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index" style="color:white;">Cancelar</a>
                
                </div>
            </form>
        </div>
    </div>
    <br />
    <div  style="padding-bottom: 40px; padding-top:30px;">
        <a asp-action="Index" style="color:white;">Acessar a lista de Reserva</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


