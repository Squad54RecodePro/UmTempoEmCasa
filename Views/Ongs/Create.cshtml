@model UmTempoEmCasa.Models.Ongs
@{
    ViewData["Title"] = "Create";
}

<div class="formulario" style="padding-left: 10px;">

    <h3 style="text-align:center;">Cadastre sua ONG</h3>

    <div class="container">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nome" class="form-label">Nome :</label>
                    <input asp-for="Nome" class="form-control" placeholder="Insira seu nome*"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />

                <div class="col-md-6 offset-md-3">
                    <label asp-for="CNPJ" class="form-label">CNPJ :</label>
                    <input asp-for="CNPJ" class="form-control" placeholder="Insira seu CNPJ*"/>
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
                <br />

                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Insira seu endereço*"/>
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />

                <div class="col-md-6 offset-md-3">
                    <label asp-for="Telefone" class="form-label">Telefone :</label>
                    <input asp-for="Telefone" class="form-control" placeholder="Insira seu telefone*"/>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Email" class="form-label">Email :</label>
                    <input asp-for="Email" class="form-control" placeholder="Insira seu e-mail*"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />      
                <div class="col-md-6 offset-md-3 btnForm">
                    <input type="submit" value="Cadastrar" class="btn btn-success" />
                
                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index" style="color:white;">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px;">
        <a style="color:white;" asp-action="Index" >Acessar a lista de ONGs</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
