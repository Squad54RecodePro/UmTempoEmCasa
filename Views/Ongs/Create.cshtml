@model UmTempoEmCasa.Models.Ongs
@{
    ViewData["Title"] = "Create";
}

<div class="formulario" style="padding-left: 10px;">

    <h3 style="text-align:center;">Cadastre sua ONG</h3>

    <div class="container">
        <div class="row">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Nome" class="form-label">Nome :</label>
                    <input type="text" asp-for="Nome" class="form-control" placeholder="Insira seu nome*"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <br />

                <div class="col-md-6 offset-md-3">
                    <label asp-for="CNPJ" class="form-label">CNPJ :</label>
                    <input type="text" asp-for="CNPJ" class="form-control" placeholder="Insira seu CNPJ*"/>
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
                <br />

                <div class="col-md-6 offset-md-3">
                    <label asp-for="Endereco" class="form-label">Endereço :</label>
                    <input type="text" asp-for="Endereco" class="form-control" placeholder="Insira seu endereço*"/>
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>
                <br />

                <div class="col-md-6 offset-md-3">
                    <label asp-for="Telefone" class="form-label">Telefone :</label>
                    <input type="text" asp-for="Telefone" class="form-control" placeholder="Insira seu telefone*"/>
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <br />
                <div class="col-md-6 offset-md-3">
                    <label asp-for="Email" class="form-label">Email :</label>
                    <input type="text" asp-for="Email" class="form-control" placeholder="Insira seu e-mail*"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <br />      
                <div class="col-md-6 offset-md-3 btnForm">
                    
                    <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" style="color:black;" id="exampleModalToggleLabel">Cadastro</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="color:black;">
                                    Deseja cadastrar sua ONG?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Não</button>
                                    <input class="btn btn-success" type="button" value="Sim" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" style="color:black;" id="exampleModalToggleLabel2"></h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body" style="color:black;">
                                   Cadastro efetuado com sucesso!
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-success" data-bs-target="#exampleModalToggle" data-bs-toggle="modal" data-bs-dismiss="modal">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>
                
                    <input id="btnBloqueado" type="button" class="btn btn-success" data-bs-toggle="modal" href="#exampleModalToggle" role="button" value="Cadastrar"/>
                    

                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index" style="color:white;">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px;">
        <a style="color:white;" asp-action="Index" >Acessar a lista de ONGs</a>
    </div>
</div>

<script>
    
    let d = document, [inputs, btnBloqueado] = [
    d.querySelectorAll('[type = "text"]'),
    d.querySelector('#btnBloqueado')]
    btnBloqueado.disabled = true
    
    for(i = 0; i < inputs.length; i++){
    inputs[i].addEventListener('input', () => {
    let values = []
    inputs.forEach(v => values.push(v.value))
    btnBloqueado.disabled = values.includes('')
    })
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
