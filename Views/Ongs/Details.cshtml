@model UmTempoEmCasa.Models.Ongs

@{
    ViewData["Title"] = "Details";
}

<div class="formulario">
    
    <h3 style="text-align: center; ">Detalhes da ONG</h3>
    
    <div class="container" style="padding-top: 30px; padding-left: 40px;">
        
        <label class = "col-sm-2"><b>Nome :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>CNPJ :</b></label>
        <br />
        <Label class = "col-sm-10">
            @Html.DisplayFor(model => model.CNPJ)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Endereço :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Telefone :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </label>
        <br /><br />

        <label class = "col-sm-2"><b>Email :</b></label>
        <br />
        <label class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </label>
          
    </div>
    <div style="padding-top: 30px; padding-bottom: 30px; padding-left: 40px;">
        <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.OngsID">ALterar</a> 
        <a class="btn btn-warning" asp-action="Index">Voltar para a Lista</a>
    </div>
</div>
