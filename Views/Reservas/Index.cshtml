        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Refugiado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anfitriao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Anuncio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imovel)
