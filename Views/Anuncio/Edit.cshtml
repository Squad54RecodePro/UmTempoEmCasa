@model UmTempoEmCasa.Models.Anuncio

@{
    ViewData["Title"] = "Edit";
}

<div class="row formulario" style="padding-left: 10px;">

    <h3 style="text-align:center; padding-top: 40px;">Editar seu Anúncio</h3>

    <div class="container">
        <div class="row">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="AnuncioID" />
                 <div class="col-md-6 offset-md-3">
                    <label asp-for="ImovelForeignKey" class="form-label">CEP :</label>
                    <select asp-for="ImovelForeignKey" class="form-control" asp-items="ViewBag.ImovelForeignKey"></select>
                    <span asp-validation-for="ImovelForeignKey" class="text-danger"></span>
                </div>
                <br />
                 <div class="col-md-6 offset-md-3">
                    <label asp-for="inicio" class="form-label"></label>
                    <input asp-for="inicio" class="form-control" />
                    <span asp-validation-for="inicio" class="text-danger"></span>
                </div>
                <br />
                 <div class="col-md-6 offset-md-3">
                    <label asp-for="valor" class="form-label">Valor :</label>
                    <input asp-for="valor" class="form-control" />
                    <span asp-validation-for="valor" class="text-danger"></span>
                </div>
                <br />
                 <div class="col-md-6 offset-md-3">
                    <input type="submit" value="Alterar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div style="padding-bottom: 40px; padding-top:30px; padding-left: 20px;">
        <a style="color: white" asp-action="Index"><b>Acessar Anúncios</b></a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
